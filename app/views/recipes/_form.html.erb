<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name, id: :recipe_name %>
  </div><br>

  <div class="field">
    <%= form.number_field :user_id, id: :recipe_user_id, value: current_user.id, type: "hidden" %>
  </div>

  <div class="col-sm-6">
    <%= form.label :description %><br>
    <%= form.text_area :description, id: :recipe_description, :class => 'form-control' %>
  </div><br>

  <div class="col-sm-6">
    <%= form.label :ingredient_list %><br>
    <%= form.text_area :ingredient_list, id: :recipe_ingredient_list, :class => 'form-control', :rows => 5 %>
  </div><br>

  <div class="col-sm-6">
    <%= form.label :directions_list %><br>
    <%= form.text_area :directions_list, id: :recipe_directions_list, :class => 'form-control', :rows => 10 %>
  </div><br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
